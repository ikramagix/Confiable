<div class="container mt-5">
  <div class="row justify-content-center">
      <!-- Logo at the top, centered -->
    <div class="text-center mt-4">
      <%= image_tag 'logo.png', alt: 'Logo', class: 'img-fluid', style: 'width: 75px; height: 75px;' %>
    </div>
    <div class="col-md-6 col-lg-4"> <!-- Adjust the column size to control form width -->
      <h2 class="text-center">Se connecter</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mt-4' }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, "Adresse e-mail", class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Mot de passe", class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, "Se souvenir de moi", class: 'form-check-label' %>
          </div>
        <% end %>

        <div class="d-grid mb-3">
          <%= f.submit "Se connecter", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
